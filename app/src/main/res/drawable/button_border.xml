<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- Color cuando la celda estÃ¡ seleccionada -->
        <shape android:shape="rectangle">
            <solid android:color="#00BFFF" /> <!-- Celeste cielo -->
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />
        </shape>
    </item>
    <item> <!-- Estado normal -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />
        </shape>
    </item>
</selector>
